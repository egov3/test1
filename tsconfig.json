{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "react": [
        "./node_modules/@types/react"
      ],
      "~components": [
        "./src/components/index"
      ],
      "~svg": [
        "./src/svg/index"
      ],
      "~styles/*": [
        "./src/styles/*"
      ],
      "~utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "include": [
    "src",
    "@types",
    "tsup.config.ts"
  ]
}