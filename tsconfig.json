{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "@types",
    "tsup.config.ts"
  ]
}